<% if user_signed_in? %>
  <%= form_tag(search_path, method: :get) do %>
    <%= text_field_tag :word, "" , size: 15, placeholder: "検索文字" %>
    <%= select_tag 'range' , options_for_select([['Select', ''],['User','1'],['PostFile','2']],:selected => "2") %>
    <%= select_tag 'search', options_for_select([["前方一致","forward_match"], ["後方一致","backward_match"], ["完全一致","perfect_match"], ["部分一致","partial_match"]],:selected => "partial_match") %>
    <%= select_tag 'sortstyle',options_for_select([["投稿が新しい順","new"],["投稿が古い順順","old"],["♥が多い順","favorite"],["♥が少ない順","no-favorite"],["コメが多い順","comments"],["コメが少ない順","no-comments"]]) %>
    <%= submit_tag "検索" %>
  <% end %>
<% else %>
  <%= render 'layouts/whatday' %>
<% end %>