<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User Info</h2>
      <%= render 'users/info', user: current_user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2><%= @tag.name %>-Results index</h2>
      <table class="table">
        <tr>
          <th>title</th>
          <th>user</th>
          <th>date</th>
          <th>comments</th>
          <th>favorited</th>
        </tr>
        <% @postfiles_all.each do |postfiles| %>
          <tr>
            <th><%= link_to postfiles.title, post_file_path(postfiles) %></th>
            <th><%= link_to postfiles.user.name,user_path(postfiles.user) %></th>
            <th><%= postfiles.updated_at %></th>
            <th><%= postfiles.post_comments.count %></th>
            <th><%= postfiles.favorites.count %></th>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>