<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: current_user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Favorites</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th>title</th>
              <th>date</th>
              <th>comment</th>
              <th>favorited</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @favorites_all.each do |favorite| %>
            <tr>
              <td>
                <%= link_to user_path(favorite.user) do %>
                  <%= attachment_image_tag(favorite.user, :profile_image, :fill, 50, 50, fallback: "no-image.jpg") %>
                <% end %>
              </td>
              <td><%= link_to favorite.user.name,user_path(favorite.user) %></td>
              <td><%= link_to favorite.title,post_file_path(favorite) %></td>
              <td><%= favorite.updated_at %></td>
              <td><%= favorite.post_comments.count %></td>
              <td><%= favorite.favorites.count %></td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>